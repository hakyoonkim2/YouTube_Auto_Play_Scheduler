{
    "manifest_version": 3,
    "name": "YouTube Auto Play Scheduler",
    "version": "1.0.0",
    "description": "Easily queue and auto-play YouTube videos with a drag-and-drop UI that stays on the page.",
    "permissions": ["storage"],
    "host_permissions": ["*://www.youtube.com/*"],
    "content_scripts": [
      {
        "matches": ["*://www.youtube.com/*"],
        "js": ["assets/content.js"],
        "run_at": "document_idle",
        "css": ["assets/content.css"]
      }
    ],
    "icons": {
      "16": "icon16.png",
      "32": "icon32.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  }
  